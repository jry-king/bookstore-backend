<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="orm">

    <class name="Book" table="books">
        <id name="id" column="bookid">
            <generator class="increment"/>
        </id>
        <property name="bookname" column="bookname"/>
        <property name="author" column="author"/>
        <property name="language" column="booklanguage"/>
        <property name="published" column="published"/>
        <property name="sales" column="sales"/>
        <property name="price" column="price"/>
    </class>

</hibernate-mapping>
